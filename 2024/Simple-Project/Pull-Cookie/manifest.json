{
    "manifest_version": 3,
    "name": "Cookie Reader",
    "version": "1.0",
    "description": "Reads cookies from all sites and saves them as a JSON file.",
    "permissions": [
      "cookies",
      "activeTab",
      "downloads",
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  